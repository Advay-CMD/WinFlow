<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinFlow_Installer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinFlow_Installer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WinFlow Installer">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop/>
    </Window.SystemBackdrop>

    <Grid>
        <Grid x:Name="Ready">
            <Image
            Source="Assets/winflow.png"
            Width="670"
            Height="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,0,0,0"/>
            <Border
                Margin="8,205,0,0"
                Background="{ThemeResource SystemFillColorNeutralBackground}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0"
                CornerRadius="20"
                Padding="16"
                Height="200"
                Width="650"
                HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock
                        x:Name="Heading_Ready"
                        Text="Ready?"
                        FontSize="32"
                        FontWeight="SemiBold"
                        IsTextSelectionEnabled="True"
                        SelectionHighlightColor="DarkCyan"
                        VerticalAlignment="Center"
                        Margin="0,0,0,0"/>
                    <TextBlock
                        x:Name="Body"
                        Text="Ready to install this product?"
                        FontSize="12"
                        IsTextSelectionEnabled="True"
                        SelectionHighlightColor="DarkCyan"
                        VerticalAlignment="Center"
                        Margin="2,10,0,0"/>
                    <Button Margin="530,67,0,0" 
                            Style="{StaticResource AccentButtonStyle}" 
                            Content="Let's Goo!" 
                            CornerRadius="15"
                            Click="OK_Click"
                            Grid.Row="3"/>
                </StackPanel>
            </Border>
        </Grid>
        <Grid x:Name="Agreement" Visibility="Collapsed">
            <Image
                Source="Assets/winflow.png"
                Width="670"
                Height="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,0,0,0"/>
            <Border
                Margin="8,205,0,0"
                Background="{ThemeResource SystemFillColorNeutralBackground}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0"
                CornerRadius="20"
                Padding="16"
                Height="200"
                Width="650"
                HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock
                x:Name="Heading_Agreement"
                Text="Agree to the agreement"
                FontSize="32"
                FontWeight="SemiBold"
                IsTextSelectionEnabled="True"
                SelectionHighlightColor="DarkCyan"
                VerticalAlignment="Center"
                Margin="0,0,0,0"/>
                    <TextBlock
                x:Name="Body_Agreement"
                Text="Please click accept to the agreement. If you click don't accept, the installer will immediately exit."
                FontSize="12"
                IsTextSelectionEnabled="True"
                SelectionHighlightColor="DarkCyan"
                VerticalAlignment="Center"
                Margin="2,10,0,0"/>
                    <ScrollViewer
                Margin="0,10,0,0"
                Height="50"
                Background="{ThemeResource ControlFillColorDefaultBrush}"
                CornerRadius="7">
                        <TextBlock
                            IsTextSelectionEnabled="True"
                            SelectionHighlightColor="Yellow"
                            x:Name="MIT_License"
                            TextWrapping="Wrap"
                            xml:space="preserve">
                                                                    MIT License

                                                          Copyright (c) 2026 Advay

Permission is hereby granted, free of charge, to any person obtaining a copy
of this software and associated documentation files (the Software), to deal
in the Software without restriction, including without limitation the rights
to use, copy, modify, merge, publish, distribute, sublicense, and/or sell
copies of the Software, and to permit persons to whom the Software is
furnished to do so, subject to the following conditions:

The above copyright notice and this permission notice shall be included in all
copies or substantial portions of the Software.

THE SOFTWARE IS PROVIDED "AS IS", WITHOUT WARRANTY OF ANY KIND, EXPRESS OR
IMPLIED, INCLUDING BUT NOT LIMITED TO THE WARRANTIES OF MERCHANTABILITY,
FITNESS FOR A PARTICULAR PURPOSE AND NONINFRINGEMENT. IN NO EVENT SHALL THE
AUTHORS OR COPYRIGHT HOLDERS BE LIABLE FOR ANY CLAIM, DAMAGES OR OTHER
LIABILITY, WHETHER IN AN ACTION OF CONTRACT, TORT OR OTHERWISE, ARISING FROM,
OUT OF OR IN CONNECTION WITH THE SOFTWARE OR THE USE OR OTHER DEALINGS IN THE
SOFTWARE.
                        </TextBlock>

                    </ScrollViewer>
                    <Button
                Margin="540,7,0,0"
                Style="{StaticResource AccentButtonStyle}"
                Content="I Accept"
                CornerRadius="15"
                Click="Accept_Click"/>
                    <Button
                Margin="420,-32,0,0"
                Style="{StaticResource DefaultButtonStyle}"
                Content="I Don't Accept"
                CornerRadius="15"
                Click="Exit_Click"/>
                </StackPanel>
            </Border>
        </Grid>
        <Grid x:Name="Components" Visibility="Collapsed">
                <Image
            Source="Assets/winflow.png"
            Width="670"
            Height="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,0,0,0"/>
                <Border
                Margin="8,205,0,0"
                Background="{ThemeResource SystemFillColorNeutralBackground}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0"
                CornerRadius="20"
                Padding="16"
                Height="200"
                Width="650"
                HorizontalAlignment="Left">
                    <StackPanel>
                        <TextBlock
                        x:Name="Heading_Choose"
                        Text="Choose what to install"
                        FontSize="32"
                        FontWeight="SemiBold"
                        IsTextSelectionEnabled="True"
                        SelectionHighlightColor="DarkCyan"
                        VerticalAlignment="Center"
                        Margin="0,0,0,0"/>
                        <TextBlock
                        x:Name="Body_Choose"
                        Text="Choose the components to install"
                        FontSize="12"
                        IsTextSelectionEnabled="True"
                        SelectionHighlightColor="DarkCyan"
                        VerticalAlignment="Center"
                        Margin="2,10,0,0"/>
                    <CheckBox
                        Margin="26,12,0,0"
                        Content="Winver"
                        Checked="CheckBox_Checked"
                        Unchecked="CheckBox_Unchecked"
                        IsChecked="False" />
                    <Button Margin="530,23,0,0" 
                            Style="{StaticResource AccentButtonStyle}" 
                            Content="Continue..." 
                            CornerRadius="15"
                            x:Name="Continue_Button"
                            Click="Continue_Button_Click"
                            IsEnabled="False"
                            Grid.Row="3"/>
                    </StackPanel>
                </Border>
            </Grid>
        <Grid x:Name="SignUp" Visibility="Collapsed">
            <Image
            Source="Assets/winflow.png"
            Width="670"
            Height="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,0,0,0"/>
            <Border
                Margin="8,205,0,0"
                Background="{ThemeResource SystemFillColorNeutralBackground}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0"
                CornerRadius="20"
                Padding="16"
                Height="200"
                Width="650"
                HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock
                        x:Name="Heading_SignUp"
                        Text="Sign Up!"
                        FontSize="32"
                        FontWeight="SemiBold"
                        IsTextSelectionEnabled="True"
                        SelectionHighlightColor="DarkCyan"
                        VerticalAlignment="Center"
                        Margin="0,0,0,0"/>
                    <TextBlock
                        x:Name="Body_SignUp"
                        Text="Sign up to recive latest news on Winflow, on your mail, without spamming or anything!"
                        FontSize="12"
                        IsTextSelectionEnabled="True"
                        SelectionHighlightColor="DarkCyan"
                        VerticalAlignment="Center"
                        Margin="2,10,0,0"/>
                    <Button Margin="520,67,0,0" 
                            Style="{StaticResource AccentButtonStyle}" 
                            Content="I signed up!" 
                            CornerRadius="15"
                            Click="Signed_Up_Click"
                            Grid.Row="3"/>
                </StackPanel>
            </Border>
        </Grid>
        <Grid x:Name="Installation" Visibility="Collapsed">
            <Image
            Source="Assets/winflow.png"
            Width="670"
            Height="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,0,0,0"/>
            <Border
                Margin="8,205,0,0"
                Background="{ThemeResource SystemFillColorNeutralBackground}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0"
                CornerRadius="20"
                Padding="16"
                Height="200"
                Width="650"
                HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock
                        x:Name="Heading_Installation"
                        Text="Install?"
                        FontSize="32"
                        FontWeight="SemiBold"
                        IsTextSelectionEnabled="True"
                        SelectionHighlightColor="DarkCyan"
                        VerticalAlignment="Center"
                        Margin="0,0,0,0"/>
                    <TextBlock
                        x:Name="Body_Installation"
                        Text="Your ready for installation! Please don't use your computer at this time. Please save any unsaved work, as your computer WILL reboot! **Be very sure!**. Windows security may prompt for permission during installation. This is normal for system-level installers."
                        FontSize="12"
                        IsTextSelectionEnabled="True"
                        SelectionHighlightColor="DarkCyan"
                        VerticalAlignment="Center"
                        TextWrapping="WrapWholeWords"
                        Margin="2,10,0,0"/>
                    <Button Margin="550,35,0,0" 
                            Style="{StaticResource AccentButtonStyle}" 
                            Content="Install" 
                            CornerRadius="15"
                            Click="Install_Click"
                            Grid.Row="3"/>
                </StackPanel>
            </Border>
        </Grid>
        <Grid x:Name="Install_Page" Visibility="Collapsed" Background="Black">
            <StackPanel HorizontalAlignment="Center">
                <ProgressRing
                    Margin="0,300,0,0"
                    Width="60"
                    Height="60"
                    IsActive="True"
                    Foreground="White"
                    Opacity="0.85"/>
                <TextBlock
                        x:Name="Heading_Install_Page"
                        Text="Installing... Waiting for RubRub to come!"
                        FontSize="22"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        Margin="56,20,0,0"/>
                <ProgressBar Width="530" 
                             IsIndeterminate="True"
                             Foreground="White"
                             Margin="0,250,0,0"/>
                <TextBlock
                        x:Name="Description_Install_Page"
                        Text="Installing... Wait... I don't know what is installing!"
                        FontSize="14"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        Margin="110,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
